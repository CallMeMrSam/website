<%- include('helpers/header.ejs'); %>
  <section class="hero is-fullheight-with-navbar">
    <div class="hero-body">
      <div class="container">
        <form action="POST">
          <div class="field">
            <label class="label is-large">Nom d'utilisateur</label>
            <div class="control has-icons-left has-icons-right">
              <input class="input is-large" type="text" placeholder="nom d'utilisateur">
              <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <label class="label is-large">Mot de passe</label>
            <div class="control has-icons-left has-icons-right">
              <input class="input is-large" type="password" placeholder="mot de passe">
              <span class="icon is-small is-left">
                <i class="fas fa-key"></i>
              </span>
            </div>
          </div>
          <div class="field is-grouped">
            <div class="control">
              <button class="button is-link">Submit</button>
            </div>
            <div class="control">
              <a href="/" class="button is-link is-light">Cancel</a>
            </div>
            <div class="control">
              <a href="/register" class="button is-success">S'inscrire</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </section>
<%- include('helpers/footer.ejs'); %>